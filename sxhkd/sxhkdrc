#
# keybindings
#

# terminal 
super + 0
	kitty


# launcher
super + @space
	rofi -show drun -no-default-config -config ~/.config/rofi/full_screen.rasi

super + r
	rofi -show drun

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# volume
super + equal
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ --limit 1.0

super + minus
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-


# mute
super + p
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle


#
# bspwm
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + c
#super + {_,shift + }w
	bspc node -c
  #bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

super + f
    	bspc node -t ~floating


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus
#
super + {h,j,k,l}
  bspc node -f {west,south,north,east}

super + {1-9}
    bspc {desktop -f,node -d} '^{1-9}'

#
# preselect
#

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + ctrl + {h,j,k,l}
    bspc node -p {left,down,right,up}

super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + fn + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + e
	thunar

super + y 
	flameshot gui

super + d
  bspc node -g sticky=on -g hidden=on

super + shift + d
  $HOME/.scripts/maximize.sh

#
# brightness
#

ctrl + shift + equal
  brightnessctl set +10%

ctrl + shift + minus
  brightnessctl set 10%-
